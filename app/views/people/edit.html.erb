<% provide(:title, 'Edit User') %>
<h1>Editing <%= @employee.email%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 edit_user">
    <!-- form for submitting employees. 
    submits to /people path. that can be found in routes. 
    passes in @employee that is defined by the form
    thats what :name, :email,  etc is for 

  --> 
    <%= form_for(@employee, html: { multipart: true },  url: people_path(@employee)) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control required' %>

      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>

      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control' %>

      <%= f.label :zip_code %>
      <%= f.text_field :zip_code, class: 'form-control' %>

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control required' %>

      <%= f.label :comments %>
      <%= f.text_field :comments, class: 'form-control' %>

      <%= f.label :home_comm , "Home Comments"%>
      <%= f.text_area :home_comm, class: 'form-control' %>

      <%= f.label :homecheck %>
      <%= f.check_box :homecheck, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control required' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control required' %>

      <%= f.label :role_id %>
      <%= f.collection_select :role_id, @roles, :id, :title, :prompt => "Select Role" , class: 'form-control required' %>

      
      <% if admin?(current_user) %>

        <%= f.label :foster %>
        <%= f.check_box :foster_check, class: 'form-control' %>

        <%= f.label :adopt %>
        <%= f.check_box :adopt_check, class: 'form-control' %>
        
        <%= f.label :disabled %>
        <%= f.check_box :disabled, class: 'form-control' %>

        <br>
      <% end %>


        <div id="upload-buttons" style="padding-top: 15px">

        <div class = "upload-wrapper">
            <span class="btn btn-large btn-warning btn-file">
                <%= label_tag "Homecheck Document" %>
                <%= f.file_field :user_document, class: 'file-upload' %>
            </span>
            <span class = "file-name">
              <% if @employee.user_document.length > 0 %>
                <%= @employee.user_document.file.filename %> 
              <% end %>
              <span class = "glyphicon glyphicon-remove remove-file" style = "display:none"> </span>
            </span>
            
        </div>
        </div>
      

      <span class="picture">
        <%= f.label :Picture, "Profile Picture" %>
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </span>
      <%= f.submit "Submit changes", class: "btn btn-primary submit-btn" %>
    <% end %>
    </div>
</div>

<script>

$('.submit-btn').on('click', function(e){
        if (!validateForm($(this).closest(".edit_user")[0]))
            e.preventDefault()
        
})
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });

    $(".file-upload").change(function(input) { 
    var input = input.target;
    if (input.files && input.files[0]) {
        var fileName = input.files[0].name;
        var container =  $(this).closest(".upload-wrapper");
        var nameSpan = container.find(".file-name");
        nameSpan.text(fileName);
        var removeSpan = container.find(".remove-file");
        removeSpan.show();
        }
  }); 

</script>