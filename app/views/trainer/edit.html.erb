<% provide(:title, 'Edit Trainer') %>
<h1>Editing <%= @trainer.name%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 edit_trainer">
    <%= form_for(@trainer, html: { multipart: true },  url: trainer_path(@trainer)) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control required' %>

      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>

      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control' %>

      <%= f.label :zip_code %>
      <%= f.text_field :zip_code, class: 'form-control' %>

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: 'form-control' %>

      <%= f.label :person_contact, "Person of Contact" %>
      <%= f.text_field :person_contact, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :comments %>
      <%= f.text_field :comments, class: 'form-control' %>
      <%= f.submit "Submit changes", class: "btn btn-primary submit-btn" %>
    <% end %>
    </div>
</div>
<script>

$('.submit-btn').on('click', function(e){
        if (!validateForm($(this).closest(".edit_trainer")[0]))
            e.preventDefault()
        
})
</script>