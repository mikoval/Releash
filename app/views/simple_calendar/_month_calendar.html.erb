<style>
.calendar-heading{font-size: 30px;}
.small-text{
  font-size: 15px;
  display: inline-block;
  width: auto;  
}


</style>
<div class="simple-calendar">
  <div class="calendar-heading">
    <%= link_to t('simple_calendar.previous',  default: "<span class = 'glyphicon glyphicon-backward calendar-icon'></span>".html_safe), calendar.url_for_previous_view %>
    <span class="calendar-title class"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
    <%= link_to t('simple_calendar.next', default: "<span class = 'glyphicon glyphicon-forward calendar-icon'></span>".html_safe), calendar.url_for_next_view %>

    <p class = "small-text">Created by me </p> <input type="checkbox" name="created" value="Created" id = "created-alerts" class = "small-text" checked> 
    <p  class = "small-text">Assigned to me  </p> <input type="checkbox" name="assigned" value="Assigned" id = "assigned-alerts"  class = "small-text" checked> 
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
              <% else %>
                <% block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
