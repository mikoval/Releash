<% modal ||= false %>
<% remote = modal ? true : false %>

<%= form_for(edit_fost, remote: remote, url: url_for(action: 'editFoster', fost_id: fost_id, controller: 'foster', method: 'patch'))      do |f| %>

    <%= f.hidden_field :animal_id, value: animal_id%>
    <%= hidden_field_tag "fost_id", fost_id%>

    <%= f.label :current_entry, "Make it Current Entry" %>
    <%= f.check_box :current_entry, class: 'form-control' %>
 
    <%= f.label :foster_date, "Date" %>
    <%= f.text_field :foster_date, class: 'datepicker' %>
    
    <!-- Selecting Foster-->
    <%= f.label :fost_fost, "Foster"%>
    <%=collection_select(:fost_fost, :foster_id, fosters, :email, :name, {:prompt => "Select foster" ,:selected => curr_foster}) %>
    

    <%= f.label :sub_status %>
    <%= f.collection_select :sub_status_id, sub_status, :id, :name, :include_blank => true %>

    <!-- Inputing Details-->
    <%= f.label :comments, "Comments" %>
    <%= f.text_field :comments, class: 'form-control' %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>

<script>
  $('.datepicker').datepicker({
    endDate: '-0d'
  });
</script>