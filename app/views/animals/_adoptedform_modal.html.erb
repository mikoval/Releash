<% modal ||= false %>
<% remote = modal ? true : false %>

<%= form_for(new_adopt, remote: remote, url: url_for(action: 'new', controller: 'adopted', method: 'get'))      do |f| %>

    <%= f.hidden_field :animal_id, value: animal_id%>
    
    <%= f.label :current_entry, "Make it Current Entry" %>
    <%= f.check_box :current_entry, class: 'form-control' %>
 
    <%= f.label :adopt_date, "Adopt Date" %>
    <%= f.text_field :adopt_date, class: 'adopt_date' %>

    <%= f.label :sub_status, class: 'control-label' %><br>
    <%= f.collection_select :sub_status_id, SubStatusType.all, :id, :name, {:prompt => "Select SubStatus"}, class: 'form-control' %> 

    <%= f.label :adopt_adopter, "Adopter"%>
    <%=collection_select(:adopt_adopter, :adopt_id, adopters, :email, :name, {:prompt => "Select Adopter"}) %>

    <!-- Inputing Details-->
    <%= f.label :comments, "Comments" %>
    <%= f.text_field :comments, class: 'form-control' %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>

<script>
  $('.adopt_date').datetimepicker({
    //endDate: '+5y',
    format:'MM/DD/YYYY',
    
  });
    
</script>