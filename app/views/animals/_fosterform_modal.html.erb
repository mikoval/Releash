<% modal ||= false %>
<% remote = modal ? true : false %>

<!-- Intake fill in information -->
<!-- Is this going to throw an error because all the other stuff aren't in here = Check validations? --> 
<%= form_for(new_fost, remote: remote, url: url_for(action: 'new', controller: 'foster', method: 'get'))      do |f| %>

    <%= f.hidden_field :animal_id, value: animal_id%>
 
    <%= f.label :foster_date, "Foster Date" %>
    <%= f.text_field :foster_date, class: 'datepicker' %>
    
     <%= f.label :fost_fost, "Foster"%>
    <%= collection_select(:fost_fost, :foster_id, fosters, :email, :name, {:prompt => "Select foster"}) %>
     
    <%= f.label :homecheck %>
    <%= f.check_box :homecheck, class: 'form-control' %>

    <%= f.label :sub_status, class: 'control-label' %><br>
    <%= f.collection_select :sub_status_id, SubStatusType.all, :id, :name, {:prompt => "Select SubStatus"}, class: 'form-control' %> 

    <!-- Selecting Vets-->
    <%= f.label :vet_id, "Veterinarian"%>
    <%= f.collection_select(:vet_id, Veterinarian.all, :id, :name, {:prompt => "Select Current Veterinarian"}) %>

    <!-- Inputing Details-->
    <%= f.label :comments, "Comments" %>
    <%= f.text_field :comments, class: 'form-control' %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>

<script>
  $('.datepicker').datepicker({
    endDate: '-0d'
  });
</script>