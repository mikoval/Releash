<% modal ||= false %>
<% remote = modal ? true : false %>

<%= form_for(edit_train, remote: remote, url: url_for(action: 'editTraining', train_id: train_id, controller: 'training', method: 'patch'))      do |f| %>

    <%= f.hidden_field :animal_id, value: animal_id%>
    <%= hidden_field_tag "train_id", train_id%>

    <%= f.label :current_entry, "Make it Current Entry" %>
    <%= f.check_box :current_entry, class: 'form-control' %>
 
    <%= f.label :train_date, "Date" %>
    <%= f.text_field :train_date, class: 'train_date required' %>

   <%= f.label :sub_status %>
    <%= f.collection_select :sub_status_id, sub_status, :id, :name, :include_blank => true %>

    <!-- Selecting Trainer-->
    <%= f.label :trainer_id, "Trainer Location"%>
    <%= f.collection_select :trainer_id, Trainer.all, :id, :name, {:prompt => "Select Current Trainer"}, class: 'form-control'%>

    <!-- Inputing Details-->
    <%= f.label :problem_info, "Problem Information" %>
    <%= f.text_field :problem_info, class: 'form-control' %>

    <%= f.submit 'Submit', class: 'btn btn-primary submit-btn' %>
<% end %>

<script>
  $('.train_date').datetimepicker({
    //endDate: '+5y',
    format:'MM/DD/YYYY',
    
  });
</script>