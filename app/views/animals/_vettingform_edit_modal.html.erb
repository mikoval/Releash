<% modal ||= false %>
<% remote = modal ? true : false %>

<%= form_for(edit_vet, remote: remote, url: url_for(action: 'editVetting', vet_id: vet_id, controller: 'vetting', method: 'patch'))      do |f| %>

    <%= f.hidden_field :animal_id, value: animal_id%>
    <%= hidden_field_tag "vet_id", vet_id%>

    <%= f.label :current_entry, "Make it Current Entry" %>
    <%= f.check_box :current_entry, class: 'form-control' %>
 
    <%= f.label :vet_date, "Date" %>
    <%= f.text_field :vet_date, class: 'vet_date' %>

    <%= f.label :sub_status %>
    <%= f.collection_select :sub_status_id, sub_status, :id, :name, :include_blank => true %>

    <!-- Selecting Vets-->
    <%= f.label :curr_vet_id, "Veterinarian"%>
    <%= f.collection_select(:curr_vet_id, Veterinarian.all, :id, :name, {:prompt => "Select Current Veterinarian"}) %>

    <!-- Inputing Details-->
    <%= f.label :comments, "Comments" %>
    <%= f.text_field :comments, class: 'form-control' %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>

<script>
  $('.vet_date').datetimepicker({
    //endDate: '+5y',
    format:'MM/DD/YYYY',
    
  });
</script>