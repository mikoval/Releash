<% modal ||= false %>
<% remote = modal ? true : false %>

<!-- Intake fill in information -->
<!-- Is this going to throw an error because all the other stuff aren't in here = Check validations? --> 
<%= form_for(edit_vet, remote: remote, url: url_for(action: 'editVetting', vet_id: vet_id, controller: 'vetting', method: 'patch'))      do |f| %>

    <%= f.hidden_field :animal_id, value: animal_id%>
    <%= hidden_field_tag "vet_id", vet_id%>
 
    <%= f.label :vet_date, "Vetting Date" %>
    <%= f.text_field :vet_date, class: 'datepicker' %>

    <%= f.label :sub_status, class: 'control-label' %><br>
    <%= f.collection_select :sub_status_id, SubStatusType.all, :id, :name, {:prompt => "Select SubStatus"}, class: 'form-control' %> 

    <!-- Selecting Vets-->
    <%= f.label :curr_vet_id, "Veterinarian"%>
    <%= f.collection_select(:curr_vet_id, Veterinarian.all, :id, :name, {:prompt => "Select Current Veterinarian"}) %>

    <!-- Inputing Details-->
    <%= f.label :comments, "Comments" %>
    <%= f.text_field :comments, class: 'form-control' %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>

<script>
  $('.datepicker').datepicker({
    endDate: '-0d'
  });
</script>