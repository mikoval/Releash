<% provide(:title, "Animals") %>
<h1>Animals</h1>


<% if employee?(current_user) %>
<%= link_to "<button>Add Animal</button>".html_safe,  :controller => "animals", :action => "new", :method => "get" %>
<% end %>

<div class = "container">
    <% @allAnimals.each do |a| %>
    <div class = "col-md-4 col-md-offset-1 col-sm-12 col-xs-12 animal-profile" style = "border-radius: 0px; border:solid; display: inline-block">
    	<div style = "float: left;">
    		<%= display_avatar(a, "100x100") %>
		</div>
		<div style = "padding-left: 125px; text-align: left; font-size: 25px;">
			<%= link_to a.name, :controller => "animals", :action => "profile", :param => a, :method => "get" %>
		</div>
		<div style = " padding-left: 125px; text-align: left;">
      		<%= a.species.kind %> | <%= a.breed.name %>
      	</div>
        <% if employee?(current_user) %>
      	<span class ="glyphicon glyphicon-pencil" style = "float: right; cursor: pointer; display:none">
        <% end %>
      	</span>
    </div>
     <div class = "col-md-1" style = "margin: 0px;">
    </div>

<% end %>
</div>
<script>
$(".animal-profile").hover(
  function(){
    $(this).find(".glyphicon-pencil").show()
  },
  function(){
    $(this).find(".glyphicon-pencil").hide()
  }
)
</script>
