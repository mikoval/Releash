<% modal ||= false %>
<% remote = modal ? true : false %>

<!-- Intake fill in information -->
<!-- Is this going to throw an error because all the other stuff aren't in here = Check validations? --> 
<%= form_for(new_intake, remote: remote, url: url_for(action: 'new', controller: 'intake', method: 'get'))      do |f| %>

    <%= f.hidden_field :animal_id, value: animal_id%>
 
    <%= f.label :intake_date, "Intake Date" %>
    <%= f.text_field :intake_date, class: 'datepicker' %>

    <%= f.label :sub_status, class: 'control-label' %><br>
    <%= f.collection_select :sub_status_id, SubStatusType.all, :id, :name, {:prompt => "Select SubStatus"}, class: 'form-control' %> 

    <div id="fosterOrvet">
        <p style="margin-left: auto" class="fost-header"> Select Current Location </p>
            <div class="radio" id="foster-checkbox">
              <label><input type="radio" name="radiobtn" id="fosterCheck">Foster</label>
            </div>
            <div class="radio" id="vet-checkbox">
              <label><input type="radio" name="radiobtn" id="vetCheck">Veterinarian</label>
            </div>
    </div>

    <div id="fost-dropdown" class="col-md-12">
        <!-- Selecting Foster-->
        <%= f.label :foster_id, "Foster"%>
        <%= f.collection_select(:foster_id, fosters, :id, :name, {:prompt => "Select foster"})%>
    </div>

    <div id="vet-dropdown" class="col-md-12">
        <!-- Selecting Vets--> 
        <%= f.label :vet_id, "Veterinarian"%>
        <%= f.collection_select(:vet_id, Veterinarian.all, :id, :name, {:prompt => "Select Current Veterinarian"}) %>
    </div>

    <!-- Selecting Previous Location-->
    <%= f.label :animal_facility_id, "Previous Location"%>
    <%= f.collection_select(:animal_facility_id, AnimalFacility.all, :id, :name, {:prompt => "Select Previous Location"}) %>

    <!-- Inputing Details-->
    <%= f.label :comments, "Comments" %>
    <%= f.text_field :comments, class: 'form-control' %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>

<script>
    $('.datepicker').datepicker({
    endDate: '-0d'
    });
    
    $("#fost-dropdown").hide();
    $("#vet-dropdown").hide();    

    //Check if any is clicked
    $('#fosterCheck').on('change', function() {
        $("#vet-dropdown").hide();
        $("#fost-dropdown").show();
    });

    //Check if any is clicked
    $('#vetCheck').on('change', function() {
        $("#fost-dropdown").hide();
        $("#vet-dropdown").show();
    });

    
</script>