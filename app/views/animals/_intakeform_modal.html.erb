<% modal ||= false %>
<% remote = modal ? true : false %>

<!-- Intake fill in information -->
<!-- Is this going to throw an error because all the other stuff aren't in here = Check validations? --> 
<%= form_for(@animal, remote: remote, url: animals_path(@animal))  do |f| %>
<%#=form_for(@animal, remote: remote, html: {role: :form, 'data-model' => 'animal'})  do |f| %>

    <%= f.label :intake_date_modal, "Intake Date" %>
    <%= text_field_tag 'intake_dt_modal', "" ,class: 'datepicker' %>

    <%= f.label :intake_sub_modal, "Sub Status"%>
    <%= collection_select(:intake_sub_modal, :sub_status_id, SubStatusType.all, :id, :name, {:prompt => "Select Sub Status"}) %>

    <!-- Selecting Foster-->
    <%= f.label :intake_fost_modal, "Foster"%>
    <!-- This line will cause a undefined method `map' for nil:NilClass error if you comment it back in -->
    <%#= collection_select(:intake_fost_modal, :foster_id, @fosters, :email, :name, {:prompt => "Select foster"}) %>

    <!-- Selecting Vets-->
    <%= f.label :intake_vet_modal, "Veterinarian"%>
    <%= collection_select(:intake_vet_modal, :veterinarian_id, Veterinarian.all, :id, :name, {:prompt => "Select Current Veterinarian"}) %>

    <!-- Selecting Previous Location-->
    <%= f.label :intake_prev_modal, "Previous Location"%>
    <%= collection_select(:intake_prev_modal, :animal_facility_id, AnimalFacility.all, :id, :name, {:prompt => "Select Previous Location"}) %>

    <!-- Inputing Details-->
    <%= f.label :intake_comm_modal, "Details" %>
    <%= text_field_tag 'intake_cm_modal', "", class: 'form-control' %>

    <%= f.submit 'Submit', class: 'btn btn-default' %>
<% end %>

<script>
  $('.datepicker').datepicker({
    endDate: '-0d'
  });
</script>