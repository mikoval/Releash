<% modal ||= false %>
<% remote = modal ? true : false %>

<!-- Intake fill in information -->
<!-- Is this going to throw an error because all the other stuff aren't in here = Check validations? --> 
<%= form_for(edit_adopt, remote: remote, url: url_for(action: 'editAdopted', adopt_id: adopt_id,controller: 'adopted', method: 'patch'))      do |f| %>

    <%= f.hidden_field :animal_id, value: animal_id%>
    <%= hidden_field_tag "adopt_id", adopt_id%>
 
    <%= f.label :adopt_date, "Adopt Date" %>
    <%= f.text_field :adopt_date, class: 'datepicker' %>

    <%= f.label :sub_status, class: 'control-label' %><br>
    <%= f.collection_select :sub_status_id, SubStatusType.all, :id, :name, {:prompt => "Select SubStatus"}, class: 'form-control' %> 
    
    <%= f.label :adopt_adopter, "Adopter"%>
    <%= collection_select(:adopt_adopter, :adopter_id, adopters, :email, :name, {:prompt => "Select Adopter" ,:selected => curr_adopter}) %>
    
    <!-- Inputing Details-->
    <%= f.label :comments, "Comments" %>
    <%= f.text_field :comments, class: 'form-control' %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>

<script>
  $('.datepicker').datepicker({
    endDate: '-0d'
  });
</script>