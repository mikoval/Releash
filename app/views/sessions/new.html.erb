<% provide(:title, "Log in") %>

<div class = "col-md-12" id="login-pg">
  <div class="row" id="lg-row">
    <div class="col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4" id="login-container">
      <div class = "col-md-8 col-md-offset-2" id="login-content">
        <%#= image_tag("https://s3.amazonaws.com/releashatlanta/uploads/ReleashImages/images/17690116_10213324689658581_1634804572_n.png") %>
        <%#= image_tab("https://s3.amazonaws.com/releashatlanta/uploads/ReleashImages/images/20136763_1645824548783400_2143594466_n.png")%>
        <div class="row">
          <div class="logo-textdiv col-md-4 col-md-offset-2">
            <div class="col-md-2 col-md-offset-1">
              <%=image_tag("https://s3.amazonaws.com/releashatlanta/uploads/ReleashImages/images/20117249_1645824472116741_1631439036_n.png")%>
            </div>
              <h3 id= "login-title">Shelterbook</h3>
          </div>
        </div>

        <div class="row">
          <p>Log into your account</p>
          <%= form_for(:session, url: login_path) do |f| %>
            
            <%= f.email_field :email, placeholder: 'Email', class: 'line-form' %>
            <%= f.password_field :password, placeholder: 'Password', class: 'line-form pass' %>
            <%= link_to "Forgot password?", new_password_reset_path, class: 'line-form link' %>
            
            <div class="check">
              <%= f.check_box :remember_me, {class: "checkbox"} %>
              <%= f.label :remember_me, "Remember Me", {class: "checkbox"} %>
            </div>
        </div>

        <div class = "row">
            <%= f.submit "Login", class: "btn", id:"login-btn" %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>

