 <% provide(:title, 'New Animal Facility') %>
<h1>Add new animal facility</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 new_fac">
    <%= form_for(@ani_faci, html: { multipart: true },  url: animal_facility_path(@ani_faci)) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control required' %>

      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>

      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control' %>

      <%= f.label :zip_code %>
      <%= f.text_field :zip_code, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: 'form-control' %>

      <%= f.submit "Add Animal Facility", class: "btn btn-primary submit-btn" %>
    <% end %>
    </div>
</div>
<script>
$('.submit-btn').on('click', function(e){
        if (!validateForm($(this).closest(".new_fac")[0]))
            e.preventDefault()
        
  })
</script>


